{% extends 'interfaceAdministrateur.html.twig' %}
{% block body %}
    <h1>Classe</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ classe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ classe.name }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ classe.niveau }}</td>
            </tr>
            <tr>
                <th>Spec</th>
                <td>{{ classe.spec }}</td>
            </tr>
            <tr>
                <th>Nbretudiant</th>
                <td>{{ classe.nbrEtudiant }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ classe.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('classe_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('classe_edit', { 'id': classe.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
