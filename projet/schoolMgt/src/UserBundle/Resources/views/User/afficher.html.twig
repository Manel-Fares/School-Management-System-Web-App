{% block body %}

    <div class="row">
        <!-- ============================================================== -->
        <!-- data table  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Liste des utilisateurs</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example" class="table table-striped table-bordered second" style="width:100%">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Email</th>
                                <th>N°cin</th>
                                <th>N Téléphone</th>
                                <th>Rôle</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for u in users %}
                                <tr>
                                    <td>{{ u.nomuser }}</td>
                                    <td>{{ u.prenomuser }}</td>
                                    <td>{{ u.email }}</td>
                                    <td>{{ u.cinuser}}</td>
                                    <td>+216 {{ u.numteluser  }}</td>
                                    <td>{{ u.roles['0']}}</td>
                                </tr>
                            {% endfor %}

                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Email</th>
                                <th>N°cin</th>
                                <th>N Téléphone</th>
                                <th>Rôle</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end data table  -->
        <!-- ============================================================== -->
    </div>


