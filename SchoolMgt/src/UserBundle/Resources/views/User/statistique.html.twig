{% extends '::interfaceAdministrateur.html.twig' %}
{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xl-2 col-lg-1 col-md-2 col-sm-10 col-10">
            <div class="card">
                <div class="card-body">
                    <h5 class="text-muted">Users Number</h5>
                    <div class="metric-value d-inline-block">
                        <h1 class="mb-1">{{ nbuser }}</h1>
                    </div>
                </div>
                <div id="sparkline-revenue"></div>
            </div>
        </div>
        <div class="col-xl-2 col-lg-1 col-md-2 col-sm-10 col-10">
            <div class="card">
                <div class="card-body">
                    <h5 class="text-muted">Classes Number</h5>
                    <div class="metric-value d-inline-block">
                        <h1 class="mb-1">{{ nbcls }}</h1>
                    </div>
                </div>
                <div id="sparkline-revenue2"></div>
            </div>
        </div>
        <div class="col-xl-2 col-lg-1 col-md-2 col-sm-10 col-10">
            <div class="card">
                <div class="card-body">
                    <h5 class="text-muted">Clubs Numbers</h5>
                    <div class="metric-value d-inline-block">
                        <h1 class="mb-1">{{ nbclub}}</h1>
                    </div>
                </div>
                <div id="sparkline-revenue4"></div>
            </div>

        </div>
        <div class="col-xl-4 col-lg-1 col-md-2 col-sm-10 col-10">
         <div class="card">
             <div class="card-body">
                 <h5 class="text-muted">School Succes Rate</h5>
                      <div id="div_chartr" ></div>
                            <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
                            <script type="text/javascript">
                            {{ gc_draw(piechartr, 'div_chartr') }}
                            </script>
             </div>

        </div>
        </div>
    </div>


    <div class="row">
        <div class="col-xl-7 col-lg-7 col-md-6 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">Users Statistics</h5>
                <div class="card-body">
                    <div >
                        <div id="div_chart" ></div>
                        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
                        <script type="text/javascript">
                            {{ gc_draw(piechartUser, 'div_chart') }}
                        </script>

                    </div>
                </div>
            </div>
        </div>


            <div class="card">
                <h5 class="card-header">Education Levels Statistics</h5>
                <div class="card-body">
                    <div >
                        <div id="div_chart2" ></div>
                        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
                        <script type="text/javascript">
                            {{ gc_draw(Columnchart, 'div_chart2') }}
                        </script>

                    </div>
                </div>
            </div>
    </div>


{% endblock %}