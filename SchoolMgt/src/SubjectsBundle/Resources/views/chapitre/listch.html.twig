{% extends 'interfaceEtudiant.html.twig' %}
{% block body %}
    <div class="container" align="center">
        <br>
        <h2 align="center"> Course Chapters</h2>
        <br>
    <center>
    <table class="table" width="80%">
        <thead style="background-color: #a3a3cb" >
        <tr>
             <th>Name</th>
             <th>File</th>
             <th>Subject</th>
        </tr>
        </thead>
        <tbody>
    {% for m in chapitre %}
        <tr>
            <td>{{ m.nom }}</td>
            <td><a href="{{ asset('chapters/' ~ m.fichier) }}">View chapter (PDF)</a></td>
            <td>{{ m.matier.nom }}</td>
        </tr>
    {% endfor %}
    </table>
    </center>
    </div>
{% endblock %}