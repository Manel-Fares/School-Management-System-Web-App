    <link rel="stylesheet" type="text/css" href="{{ asset('back/assets/vendor/datatables/css/fixedHeader.bootstrap4.css')}}">
{% endblock %}
{% block body %}


    <div class="row">
        <!-- ============================================================== -->
        <!-- data table  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Subjects List</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example" class="table table-striped table-bordered second" style="width:100%">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Coefficient</th>
                                <th>Responsable</th>
                                <th>#</th>
                                <th>#</th>

                            </tr>
                            </thead>
                            <tbody>

                            {%  set i=0 %}
                            {% for m in matier %}
                                <tr>
                                    <td><a href="{{ path('Chapitre_affich_ens',{'id':m.id}) }}">{{ m.nom }}</a></td>
                                    <td>{{ m.coef }}</td>
                                    <td>{{ res[i].nomuser }} {{ res[i].prenomuser }}</td>
                                    {% if  m.responsable.id == id %}
                                        <td><a class="fas fa-edit" href="{{ path('Matier_update',{'id':m.id}) }}"></a></td>
                                        <td><a href="{{ path('Chapitre_ajout',{'id':m.id}) }}">Add Chapter</a></td>
                                    {% endif %}
                                    {% set i = i+1 %}
                                </tr>
                            {% endfor %}

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end data table  -->
        <!-- ============================================================== -->
    </div>


    <script src="{{ asset('back/assets/vendor/jquery/jquery-3.3.1.min.js')}}"></script>
    <script src="{{ asset('back/assets/vendor/bootstrap/js/bootstrap.bundle.js')}}"></script>
    <script src="{{ asset('back/assets/vendor/slimscroll/jquery.slimscroll.js')}}"></script>
    <script src="{{ asset('back/assets/vendor/multi-select/js/jquery.multi-select.js')}}"></script>
    <script src="{{ asset('back/assets/libs/js/main-js.js')}}"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="{{ asset('back/assets/vendor/datatables/js/dataTables.bootstrap4.min.js')}}"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script>
    <script src="{{ asset('back/assets/vendor/datatables/js/buttons.bootstrap4.min.js')}}"></script>
    <script src="{{ asset('back/assets/vendor/datatables/js/data-table.js')}}"></script>


{% endblock %}