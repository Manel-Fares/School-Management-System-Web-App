{% extends 'interfacePersonnel.html.twig' %}
{% block body %}
<h1>Assign Student List</h1>

<table class="table" >
    <thead>
    <tr>
        <th>Last Name</th>
        <th>Name</th>
        <th>Email</th>
        <th>Cin Student</th>
        <th>Date of birth</th>
        <th>Classe</th>

    </tr>
    </thead>
    <tbody>
    {% for emplois in etds %}
        <tr>
            <td>{{ emplois.prenomuser }}</td>
            <td>{{ emplois.nomuser }}</td>
            <td>{{ emplois.email }}</td>
            <td>{{ emplois.cinuser }}</td>
            <td>{{ emplois.datenaissanceuser|date }}</td>
            <td>
                <select id="selt" class="btn btn-success dropdown-toggle">
                    {% for cls in classe %}
                    <option name="sel" id="sel" value="{{ cls.id }}">{{ cls.name }}</option>

                    {% endfor %}
                </select></td>

            <td><form method="post" action="{{ path('affct', { 'id': emplois.id }) }}">
                    <input type="hidden" id="data" name="data">
          <button type="submit" style="background: none;border: none">
              <i class="fa fa-check"></i>
               </button>
                </form>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    <br>
    <br>

    <ul>
        <li>
            <a href="{{ path('get_student') }}">Get Student By a Class</a>
        </li>
    </ul>

{% endblock %}
