{% extends  'interfaceEtudiant.html.twig' %}

{% block body %}
    <div class="container">
        {% for club in clubs %}
        <div class="row" style="margin-top: +1%">

            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 pr-xl-0 pr-lg-0 pr-md-0  m-b-30" >


                <div class="product-slider">
                    <div class="card-body">
                        <img src="{{ asset('images/'~club.image)}} " style="height: 196px;width: 300px;margin-right: +10%    " >

                    </div>

                </div>

            </div>

            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 pl-xl-0 pl-lg-0 pl-md-0 border-left m-b-30" >

                <div class="product-details" style="height: 455px">
                    <div class="border-bottom pb-3 mb-3">
                        <h1>Club Info</h1></div>

                    <h3><i class="fa fa-flag" style="font-size:24px ;color: #0a3c93"></i> Nom Club : {{ club.nomclub }}</h3>







                            <a href="{{ path('club_edit', { 'idclub': club.idclub }) }}"><h3><i class="fa fa-gears" style="font-size:24px ;color: #0a3c93"></i> Edit</h3></a>


                            <a href="{{ path('club_show', { 'idclub': club.idclub }) }}"><h3><i class="fa fa-line-chart" style="font-size:24px;color: #0a3c93"></i> Club Stat</h3> </a>





                </div>

            </div>







        </div>
        {% endfor %}
    </div>
{% endblock %}

