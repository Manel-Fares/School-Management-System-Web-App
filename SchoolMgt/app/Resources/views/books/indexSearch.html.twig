
    <ul class="bolg-post-list">

    {% for book in books  %}
        <li>
            <article class="blog-post" >
                <div class="featured-post">
                    <a href="{{ path('books_show', { 'idbook': book.idbook }) }}">
                        <img src="{{ asset('images/') }}{{ book.picbook }}" alt="" style="width: 400px; height: 200px" >
                    </a>
                </div>

                <div class="divider25"></div>
                <div class="content">

                    <ul class="meta-post">

                        <li class="comment">

                            {% set con = false %}
                            {% set id = 0 %}
                            {% set break = false %}
                            {% for Like in Likes if not break %}

                                {% if  (book.idbook == Like.idbook.idbook) %}
                                    {% set break = true %}
                                    {% set id = Like.idLike %}
                                    {% set con = true %}

                                {% endif %}
                            {% endfor %}
                            {% if con %}
                                <a href="{{ path('likes_delete', { 'idlike': id }) }}">
                                    <svg class="bi bi-heart-fill" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" color="#D84242">
                                        <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" clip-rule="evenodd"/>
                                    </svg></a>
                            {% else %}
                                <a href="{{ path('likes_add', { 'idbook': book.idbook }) }}">
                                    <svg class="bi bi-heart" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg"  >
                                        <path fill-rule="evenodd" d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 01.176-.17C12.72-3.042 23.333 4.867 8 15z" clip-rule="evenodd"/>
                                    </svg>
                                </a>
                            {% endif %}


                        </li>
                        <li class="date">
                            <a href="{{ path('books_show', { 'idbook': book.idbook }) }}">
                                {# Likes#}
                                <svg class="bi bi-chat" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M2.678 11.894a1 1 0 01.287.801 10.97 10.97 0 01-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 01.71-.074A8.06 8.06 0 008 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 01-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 00.244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 01-2.347-.306c-.52.263-1.639.742-3.468 1.105z" clip-rule="evenodd"/>
                                </svg>
                            </a>
                        </li>
                        <li class="date">
                            <a href="#">
                                {# Likes#}
                                {% set id = 0 %}
                                {% set con = false %}
                                {% set break = false %}
                                {% for wish in wishliste if not break %}

                                    {% if  (book.idbook == wish.idbook.idbook) %}
                                        {% set break = true %}
                                        {% set con = true %}
                                        {% set id = wish.idlist %}
                                    {% endif %}
                                {% endfor %}
                                {% if con %}
                                    <a href="{{ path('wishliste_delete', { 'idbook': id}) }}"><svg class="bi bi-bookmark-fill" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" color="#4A4441">
                                            <path fill-rule="evenodd" d="M3 3a2 2 0 012-2h6a2 2 0 012 2v12l-5-3-5 3V3z" clip-rule="evenodd"/>
                                        </svg></a>
                                {% else %}
                                    <a href="{{ path('wishliste_add', { 'idbook': book.idbook }) }}">  <svg class="bi bi-bookmark" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M8 12l5 3V3a2 2 0 00-2-2H5a2 2 0 00-2 2v12l5-3zm-4 1.234l4-2.4 4 2.4V3a1 1 0 00-1-1H5a1 1 0 00-1 1v10.234z" clip-rule="evenodd"/>
                                        </svg></a>
                                {% endif %}
                            </a>
                        </li>


                    </ul>
                    <ul class="meta-post">


                        <div class="likes-bar">
                            {% set b = false %}
                            {% for llkk in LikesByUser if not b %}
                            {% if (llkk.idbook.idbook == book.idbook) %}
                            <p><a href="#"><img src="{{ asset(llkk.idetd.picuser) }}" alt="" style=" overflow:hidden;
    -webkit-border-radius:50px;
    -moz-border-radius:50px;
    border-radius:50px;
    width:30px;
    height:30px;">Brynn</a> and
                                {% set b = true %}
                                {% endif %}
                                {% endfor %}
                                <a href="#">{{ book.nbrLike }} Students</a> like this</p>
                        </div>

                        <li><a href="#">1.2M Views<i class="lnr lnr-eye"></i></a></li>
                        <li><a href="#">06 Comments<i class="lnr lnr-bubble"></i></a></li>
                    </ul>
                    <h3 class="title">

                        {{ book.titrebook }}
                    </h3>
                    <div class="entry-post">
                        <p>{{ book.descriptionbook }}</p>
                        <div class="more-link">
                            {% if book.etatbook =='Disponible' %}
                                <a href="{{ path('reservationbook_add', { 'idbook': book.idbook }) }}" class="read-more-btn" >add To My Books</a>
                            {% else %}
                                <a  class="read-more-btn" disabled="disabled" HIDDEN>Non Disponible</a>
                            {% endif %}


                        </div>

                    </div>
                </div>
            </article>
        </li>
    {% endfor %}
</ul>

