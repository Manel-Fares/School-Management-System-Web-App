{% extends 'interfacePersonnel.html.twig' %}

{% block body %}
    <div class="container">
    <h1>Classes list</h1>
        <input  class="form-control"  aria-label="Search" type="text" placeholder="Search" name="search" id="re" onkeyup="searchh()" style="border-color:#003f81;width: 250px;">
        <br>
        <div id="det2">

    <table class="table">
        <thead >
            <tr>

                <th>Name</th>
                <th>Niveau</th>
                <th>Spec</th>
                <th>Student Nbr</th>
                <th>Description</th>


            </tr>
        </thead>
        <tbody style="border-radius:2px;">
        {% for classe in classes %}
            <tr>
                <td>{{ classe.name }}</td>
                <td>{{ classe.niveau }}</td>
                <td>{{ classe.spec }}</td>
                <td>{{ classe.nbrEtudiant }}</td>
                <td>{{ classe.description }}</td>
                <td>
                    <a href="{{ path('classe_edit', { 'id': classe.id }) }}"><i class="fa fa-edit"></i></a>
                </td>
                <td><a href="{{ path('classe_deleteC', { 'id': classe.id }) }}"><i class="fa fa-trash"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    <br>
    <ul>
        <li>
            <a href="{{ path('classe_new') }}">Create a new class</a>
        </li>
    </ul>
    </div>

    <script>
        function searchh(){
          var sch=$("#re").val();
        $.ajax({
            url: "{{ path('clh') }}",
            data:{dat: sch},
            type: "POST",
            success: function(data){
                $('#det2').html(data).show();
            }
        });
        }
    </script>
{% endblock %}
