<div id="det2">
    <table class="table">
        <thead >
        <tr>

            <th>Name</th>
            <th>Niveau</th>
            <th>Spec</th>
            <th>Nbretudiant</th>
            <th>Description</th>

        </tr>
        </thead>
        <tbody style="border-radius:2px;">
        {% for classe in classes %}
            <tr>
                <td>{{ classe.name }}</td>
                <td>{{ classe.niveau }}</td>
                <td>{{ classe.spec }}</td>
                <td>{{ classe.nbrEtudiant }}</td>
                <td>{{ classe.description }}</td>
