{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ratings list</h1>

    <table>
        <thead>
            <tr>
                <th>Idrating</th>
                <th>Iduser</th>
                <th>Idclub</th>
                <th>Rating</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rating in ratings %}
            <tr>
                <td><a href="{{ path('rating_show', { 'idrating': rating.idrating }) }}">{{ rating.idrating }}</a></td>
                <td>{{ rating.iduser }}</td>
                <td>{{ rating.idclub }}</td>
                <td>{{ rating.rating }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('rating_show', { 'idrating': rating.idrating }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('rating_edit', { 'idrating': rating.idrating }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rating_new') }}">Create a new rating</a>
        </li>
    </ul>
{% endblock %}
