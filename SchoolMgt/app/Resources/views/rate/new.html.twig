{% extends 'interfaceEtudiant.html.twig' %}

{% block body %}
    <section class="banner_area">
        <div class="banner_inner d-flex align-items-center">
            <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background="" style="transform: translateY(-147.365px);"></div>
            <div class="container">
                <div class="banner_content text-center">
                    <h2>Club info</h2>
                    <div class="page_link">

                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="container" style="margin-top: 10px">
        <center>
            <div class="card bg-light mb-3"  style="width: 800px">
                <div class="card-body" >
                    <h5 class="card-title"></h5>
                    <div class="row" style="margin-top: +1%">



                        <div class="product-details"style="margin-left: +12%;width: 600px ">
                            <div class="border-bottom pb-3 mb-3">

                            </div>
                            <img src="{{ asset('images/'~aa.image)}} " style="width: 200px;height: 150px" >

                            {{ form_start(form) }}
                            {{form_widget(form.rating)}}
                            <input type="submit" value="Rate"class="genric-btn primary circle" />

                            {{ form_end(form) }}
                            <h5>Nom Responsable :{{ aa.getIdResponsable().username }}</h5>
                            <h5>Email Responsable : {{ aa.getIdResponsable().email }}</h5>
                            <h5>Nom Club : {{ aa.getNomclub() }}</h5>
                            <h5>Domaine :{{ aa.getDomaine() }}</h5>
                            <a href="{{ path('club_show_image') }}">Back to the list</a>
                        </div>








                    </div>
                </div>
            </div>

       </center>
    </div>
{% endblock  %}
